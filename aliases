source ~/.git-completion.bash

alias nginx_start='launchctl load -w ~/Library/LaunchAgents/org.nginx.nginx.plist'
alias nginx_stop='launchctl unload -w ~/Library/LaunchAgents/org.nginx.nginx.plist'

export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced
export RUBYOPT=-Ku

alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias beu="b exec uniqfrd"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"
alias ber="b exec rake"
alias create-repo="touch .gitignore && git add .gitignore && git commit -m 'Created repo' && git checkout -b develop"
alias g="git"
alias gaa="git add -A"
alias gci="git commit"
alias gcod="git checkout develop"
alias gcom="git checkout master"
alias gpom="git pull origin master"
alias gpod="git pull origin develop"
alias gm="git merge --no-ff"
alias gg="gitk --all &"
alias gst="g st -sb"
alias l="ls -lahG"
alias m="mate ."
alias p="ping"
alias py="ping -c 4 ya.ru"
alias pwc="pwd | pbcopy"
alias r="rake"
alias rpry="pry -r ./config/environment"
alias cdp="cd ~/Projects"

slice() {
	git add -A
	git commit -m "Slice"
}